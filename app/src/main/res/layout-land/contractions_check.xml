<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contractions"
            android:layout_width="265dp"
            android:layout_height="46dp"
            android:fontFamily="sans-serif-black"
            android:text="Contractions"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/m_re_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/m_re"
                android:layout_width="179dp"
                android:layout_height="22dp"
                android:ems="10"
                android:text="'m and 're" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/s"
                android:layout_width="181dp"
                android:layout_height="23dp"
                android:ems="10"
                android:text="@string/s" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ll_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="'ll" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/d_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="'d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ve_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="'ve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nt_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/nt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'nt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/noun_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/noun_contractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="noun contractions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/c_not_p_stars"
                android:layout_width="241dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/samplestars" />

            <TextView
                android:id="@+id/c_not_p"
                android:layout_width="284dp"
                android:layout_height="23dp"
                android:ems="10"
                android:text="contractions not posessessives" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>