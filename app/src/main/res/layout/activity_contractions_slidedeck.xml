<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/quiz"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/quiz" />

            <ImageButton
                android:id="@+id/check"
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/check" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="557dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="804dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/slide1l" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="816dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/slide2l" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="776dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/slide3l" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="779dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/slide4l" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="772dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/slide5l" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="753dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/slide6l" />


            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>